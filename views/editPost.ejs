<%- include('partials/header.ejs') %>

<main>
    <div class="container">
        <div class="card">
            <h2>Edit Book</h2>
            <form action="/edit-post/<%= book.id %>" method="POST">
                <div class="form-group">
                    <label for="bookName">Name of Book:</label>
                    <input type="text" id="bookName" name="bookName" value="<%= book.book_name %>" required>
                </div>
                <div class="form-group">
                    <label for="bookTitle">Title of Book:</label>
                    <input type="text" id="bookTitle" name="bookTitle" value="<%= book.book_title %>" required>
                </div>
                <div class="form-group">
                    <label for="bookDescription">Description of Book:</label>
                    <textarea id="bookDescription" name="bookDescription" rows="5" required></textarea>
                </div>
                <div class="form-group">
                    <label for="isbnNumber">ISBN Number:</label>
                    <input type="text" id="isbnNumber" name="isbnNumber" placeholder="For isbn number please refer this site: https://openlibrary.org" value="<%= book.isbn_number %>" required>
                </div>
                <button type="submit">Update Book</button>
                <button type="button" onclick="window.location.href='/'">Back</button>
            </form>
        </div>
    </div>
</main>

<%- include('partials/footer.ejs') %>

<script>
    document.addEventListener('DOMContentLoaded', function() {
        var bookDescription = document.getElementById('bookDescription');
        bookDescription.value = '<%= book.book_description %>';
    });
</script>